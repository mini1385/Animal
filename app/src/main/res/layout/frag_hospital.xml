<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#3EFFD3C8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서울 동물병원/동물약국 찾기"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:fontFamily="@font/cookierun"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_location_gray_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/sub"
            android:clickable="true"
            android:background="@drawable/home_rl_bg"
            android:padding="3dp"
            android:contextClickable="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/sub"
        android:background="@drawable/home_rl_bg">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_view"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="● 동물병원"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#4CAF50"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="● 24시 동물병원"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#FA3434"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="● 동물약국"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#FF9800"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_rl_bg"
        android:padding="16dp">

         <TextView
             android:id="@+id/title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="상호명"
             android:textSize="20sp"
             android:fontFamily="@font/joongnamedium"/>

        <TextView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"
            android:text= "주소 : "
            android:textSize="18sp"
            android:fontFamily="@font/joongnalight"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/aa"
            android:layout_marginTop="8dp"
            android:text= ""
            android:textSize="18sp"
            android:fontFamily="@font/joongnalight"/>

        <TextView
            android:id="@+id/te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa"
            android:layout_marginTop="6dp"
            android:text= "전화번호 : "
            android:textSize="18sp"
            android:fontFamily="@font/joongnalight"/>

        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa"
            android:layout_toRightOf="@id/te"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:fontFamily="@font/joongnalight"/>

        <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/te"
            android:layout_marginTop="6dp"
            android:text= "사이트 : "
            android:textSize="18sp"
            android:fontFamily="@font/joongnalight"/>

        <TextView
            android:id="@+id/site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/te"
            android:layout_toRightOf="@id/ss"
            android:layout_marginTop="6dp"
            android:text=""
            android:textSize="18sp"
            android:fontFamily="@font/joongnalight"/>

    </RelativeLayout>


</LinearLayout>